<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DoaDanDzikirApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/main_green</item>
        <item name="colorPrimaryVariant">@color/dark_green1</item>
        <item name="colorOnPrimary">@color/light_green1</item>

<!--        secondary brand color-->
        <item name="colorSecondary">@color/main_green</item>
        <item name="colorOnSecondary">@color/white</item>

<!--        status bar color-->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="PagiActivity" parent="Theme.DoaDanDzikirApp">
        <item name="android:statusBarColor">@color/morning_blue</item>
        <item name="colorPrimary">@color/morning_blue</item>
        <item name="title">Dzikir Pagi</item>
    </style>

    <style name="PetangActivity" parent="Theme.DoaDanDzikirApp">
        <item name="android:statusBarColor">@color/afternoon_orange</item>
        <item name="colorPrimary">@color/afternoon_orange</item>
        <item name="title">Dzikir Petang</item>
    </style>
</resources>